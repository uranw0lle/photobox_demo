<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/starRating.css">
<link href='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css' rel='stylesheet' /> 

    <div class="row">
        <div class="col-6">
            <div id="photoCarouselControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% photospot.images.forEach((img, i)  => {%>
                  <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                    <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100" alt="...">
                  </div>
                  <% }) %> 

                  <%  if(photospot.images.length > 1) {  %> 
                <button class="carousel-control-prev" type="button" data-bs-target="#photoCarouselControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#photoCarouselControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
                <% } %> 
              </div>
            </div>

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= photospot.title %>
                    </h5>
                    <p class="card-text">
                        <%= photospot.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= photospot.location %>
                    </li>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">
                           Submitted by:  <strong><%= photospot.author.username %></strong>
                        </li>
                </ul>
                <% if(currentUser && photospot.author.equals(currentUser._id)) { %>
                <div class="card-body">
                    <a class="card-link btn btn-primary" href="/photospots/<%= photospot._id %>/edit">Edit</a>
                    <form class="d-inline" action="/photospots/<%= photospot._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                    <% } %>
                <div class="card-footer text-muted">
                    <a class="" href="/photospots/">All Photo Spots</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div id='map'></div>
            <% if(currentUser) { %>
            <h2>Leave a Review of this Spot</h2>
            <form class="mb-3 validated-form" action="/photospots/<%= photospot._id %>/reviews" method="POST" novalidate>
                
                <!-- Review Sterne Gelöt -->
                <div class="mb-3">
                    <fieldset class="starability-checkmark">
                        <legend>Your rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" checked />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

            
                <div class="mb-3">
                    <label class="form-label" for="reviewText">Write a review of this photo spot</label>
                    <textarea name="review[text]" class="form-control" id="reviewText" cols="10" rows="5"
                        required></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please leave your opinion here</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% } %>
            <!-- Review Gelöt -->
            
            <% for(let review of photospot.reviews) { %>
            <div class="card mb-3 ">
                <div class="card-body">
                    <h5 class="card-title">From: <%= review.author.username %> </h5>
                    <p class="starability-result" data-rating="<%= review.rating%>">
                      Rated: <%= review.rating%> stars
                    </p>
                    <p>Review: <%= review.text%></p>
                    <% if(currentUser && review.author.equals(currentUser._id)) { %>
                    <form action="/photospots/<%= photospot._id%>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <!-- Map Gelöt -->
    <script crossorigin="anonymous" src='https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js'></script>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const photospot = <%-JSON.stringify(photospot)%>
    </script>
    <script crossorigin="anonymous" src='/scripts/showPageMap.js'></script>

