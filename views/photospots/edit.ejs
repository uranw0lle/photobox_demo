<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Photo Spot</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/photospots/<%= photospot._id %>?_method=PUT" method="POST" novalidate
                        class="validated-form" enctype="multipart/form-data">

                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" id="title" name="photospot[title]"
                                value="<%= photospot.title %>" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">A good Title is missing</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="photospot[location]"
                                value="<%= photospot.location %>" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">The Location of the Photo Spot is missing</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="description">Description </label>
                            <textarea class="form-control" type="text" id="description" name="photospot[description]"
                                required><%= photospot.description %></textarea>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">A proper descriptions helps the people to find that Photo Spot
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="image" class="form-label">Add your own images:</label>
                            <input class="form-control" type="file" id="image" name="image" multiple>
                        </div>

                        <div class="mb-3 ">
                            <% photospot.images.forEach(function(img, i) { %>
                                <img src="<%= img.thumbnail  %>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]"
                                        value="<%=img.filename%>">
                                </div>
                                <label for="image-<%=i%>">Delete</label>
                                <% }) %>
                        </div>

                        <div class="mb-3">
                            <button class="btn btn-info">Update Photo Spot</button>
                        </div>
                    </form>
                    <footer>
                        <a href="/photospots/<%= photospot._id %> ">Back to Photo Spot</a>
                    </footer>
                </div>
            </div>
        </div>
    </div>